body {
    font-family: sans-serif;
    background: #f8f8f8;
    direction: rtl;
    text-align: center;
}
header {
    background: #d60000;
    color: white;
    padding: 30px;
    font-size: 20px;
}
.menu {
    margin-top: 30px;
}
.menu ul {
    list-style: none;
    padding: 0;
}
.menu li {
    background: white;
    margin: 10px auto;
    padding: 15px;
    width: 250px;
    border-radius: 10px;
    border: 1px solid #ccc;
}
footer {
    margin-top: 40px;
    padding: 20px;
    color: #555;
}
